@model Library.ViewModelLayer.ViewModels.PublicationHouseBooksViewModel

@using (Html.BeginForm("Update", "PublicationHouse", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Publication House</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PublicationHouse.PublicationHouseId)
        <div class="form-group">
            @Html.LabelFor(model => model.PublicationHouse.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PublicationHouse.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PublicationHouse.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PublicationHouse.Adress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PublicationHouse.Adress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PublicationHouse.Adress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Books, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var book in Model.Books)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="selectedBooks" value="@book.BookId" id="@book.BookId"
                               @(Model.BookPublicationHouses.FirstOrDefault(x => x.BookId == book.BookId && x.PublicationHouseId == Model.PublicationHouse.PublicationHouseId) != null ? "checked=\"checked\"" : "") />
                        <label class="form-check-label" for="@book.BookId">@book.Name</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

