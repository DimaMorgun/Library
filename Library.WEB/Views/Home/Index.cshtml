@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                @Html.ActionLink("Go to Books", "Index", "Book", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
            <div class="carousel-item">
                @Html.ActionLink("Go to Authors", "Index", "Author", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
            <div class="carousel-item">
                @Html.ActionLink("Go to Pblication houses", "Index", "PublicationHouse", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
            <div class="carousel-item">
                @Html.ActionLink("Go to Magazines", "Index", "Magazine", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
            <div class="carousel-item">
                @Html.ActionLink("Go to Brochures", "Index", "Brochure", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
            <div class="carousel-item">
                @Html.ActionLink("All Publications", "AllPublications", "Home", null, new { @class = "btn btn-success", @style = "margin: 10px 0 10px calc(50% - 51.5px);" })
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>