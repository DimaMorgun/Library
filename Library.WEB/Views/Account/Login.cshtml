@model Library.ViewModelLayer.Identity.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/signin.css")
</head>

<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Please sign in</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", id = "inputEmail", @class = "form-control", placeholder = "Email address", required = "required", autofocus = "autofocus" } })

            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password", id = "inputPassword", @class = "form-control", placeholder = "Password", required = "required" } })

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            @Html.ActionLink("Register", "Register", "Account", null, new { @class = "btn btn-lg btn-primary btn-block", data_icon = "gear" })
        }
    </div>
</body>
</html>
